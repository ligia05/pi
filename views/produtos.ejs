<%- include('./partials/head') %>
<body>
    <%- include('./partials/header') %>
    <link rel="stylesheet" href="/css/formulario.css">
    
    <nav id="nav-adm">
       
        <ul>
            <li><a href="/">Home</a></li>
        </ul>
        <ul>
